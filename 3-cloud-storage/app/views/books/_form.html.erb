<main class="form-card text--centered">
  <header class="form-card__header">
    <%= image_tag "id-drawing" %>
    <h1 class="form-card__title">Take a photo of your ID card</h1>
    <p class="text--help">We'll use this to fill in your basic information.</p>
  </header>
  <div class="form-card__content">
    <div class="form-group">
    <!-- [START multipart] -->
      <%= form_for @book, :html => { :multipart => true } do |f| %>
      <!-- [END multipart] -->
        <!-- [START cover_image] -->
          <%= f.file_field :cover_image, hidden: true %>
          <div class="file-upload">
            <input type="file" id="book_cover_image" name="book[cover_image]" class="file-upload__input">
            <label class="button" for="book_cover_image" class="file-upload__label">Take a photo <i class="button__icon icon-phone_iphone"></i></label>
          </div>
        <!-- [END cover_image] -->
    </div>
  </div>
  <div class="form-card__footer">
    <button class="button button--primary" type="submit">Continue <i class="icon icon-arrow_forward"></i></button>
  </div>
  
  <% end %>
</main>
