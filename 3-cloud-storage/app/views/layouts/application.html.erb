<!DOCTYPE html>
<html>
  <head>
    <title>Docs first</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="page-wrapper">
      <header class="main-header">
        <div class="toolbar">
          <div class="toolbar__left">
            <h1 class="main-header__title"><a class="main-header__logo" href="/">Documents First</a></h1>
          </div>
        </div>
      </header>

      <section class="slab">
        <%= yield %>
      </section>

      <footer class="main-footer">
        <div class="grid">
          <div class="grid__item">
            <p class="text--small">
              This program is run by <a href="https://www.codeforamerica.org/">Code for America</a>.
            </p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>